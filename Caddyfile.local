(LOG) {
	log {
		output file ./caddy.log {
			roll_size 1mb
			roll_keep 5
			roll_keep_for 1h
		}
		format console {
			time_format "iso8601"
		}
	}
}

(COMCFG) {
	encode zstd gzip
}

{
	debug
}

:2025 {
	import COMCFG
	import LOG
	metrics /metrics
	@china {
		geocn {
			geolocal "./Country.mmdb"
		}
	}
	file_server @china {
		root ./docker/example/deny
	}
	file_server {
		root ./docker/example/allow
	}
}
